<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/primary_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- COLOR HEADER BAR -->
        <View
            android:id="@+id/color_header"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/accent" />

        <!-- CARD CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TOP ROW: Time & Habit Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Time with Alarm Icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_alarm_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="ðŸ””"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:00 AM"
                        android:textColor="@color/secondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Habit Icon & Name -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_habit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="ðŸƒ"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_habit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Morning Jog"
                        android:textColor="@color/secondary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- BOTTOM ROW: Status & Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Completion Status -->
                <TextView
                    android:id="@+id/text_completion_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="â˜ Pending"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Alarm Status -->
                <TextView
                    android:id="@+id/text_alarm_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm: On"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete habit"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="@color/error" />

            </LinearLayout>

            <!-- Progress Bar (Small, at bottom) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:progress="60"
                android:progressBackgroundTint="@color/gray_200"
                android:progressTint="@color/accent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
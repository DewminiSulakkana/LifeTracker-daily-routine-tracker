<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_glass_bg"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="8dp"
    android:outlineProvider="background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LifeTracker"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E0FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="12sp"
            android:textColor="#CCFFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Main Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#20FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Progress"
            android:textSize="14sp"
            android:textColor="#E0FFFFFF"
            android:layout_marginBottom="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="75"
            android:progressTint="#7C4DFF"
            android:progressBackgroundTint="#40FFFFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/widget_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="75% Complete"
            android:textSize="12sp"
            android:textColor="#E0FFFFFF"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Habit List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Things to do:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#E0FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:id="@+id/widget_pending_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 pending"
            android:textSize="10sp"
            android:textColor="#CCFFFFFF"
            android:background="#40FFFFFF"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Habit List -->
    <LinearLayout
        android:id="@+id/widget_habits_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12px">

        <!-- Habits will be added dynamically here -->

    </LinearLayout>

    <!-- Stats Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Hydration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_water_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="10sp"
                android:textColor="#E0FFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </LinearLayout>

        <!-- Mood -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_mood_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textSize="10sp"
                android:textColor="#E0FFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quick Action Button -->
    <Button
        android:id="@+id/widget_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ï¼‹ Add Habit"
        android:textSize="12sp"
        android:background="#40FFFFFF"
        android:textColor="#E0FFFFFF"
        android:padding="8dp" />

</LinearLayout>
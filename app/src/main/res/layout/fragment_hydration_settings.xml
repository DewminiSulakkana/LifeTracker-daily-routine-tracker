<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/category_learning_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Hydration Reminders"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/reminder_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”• Reminders are currently OFF"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Reminder Settings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Enable Reminders Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Reminders"
                        android:textSize="16sp"
                        android:textColor="@color/secondary" />

                    <Switch
                        android:id="@+id/switch_reminders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Reminder Interval -->
                <LinearLayout
                    android:id="@+id/reminder_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminder Interval"
                        android:textSize="14sp"
                        android:textColor="@color/secondary"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekbar_interval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="11" /> <!-- 5 to 60 minutes in 5-min steps -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5 min"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500" />

                        <TextView
                            android:id="@+id/text_interval_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"
                            android:textSize="14sp"
                            android:textColor="@color/accent"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="60 min"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Daily Goal Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Water Goal"
                    android:textSize="16sp"
                    android:textColor="@color/secondary"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="15" /> <!-- 500 to 4000ml in 250ml steps -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="500ml"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_goal_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000ml"
                        android:textSize="14sp"
                        android:textColor="@color/accent"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4000ml"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Log Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Log Water"
                    android:textSize="16sp"
                    android:textColor="@color/secondary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_log_small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="250ml"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/teal_200"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_log_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="500ml"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_log_large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="750ml"
                        android:backgroundTint="@color/accent_variant"
                        android:textColor="@color/white" />

                </LinearLayout>

                <!-- Custom Amount Button -->
                <Button
                    android:id="@+id/btn_custom_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Amount"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/gray_300"
                    android:textColor="@color/black" />

                <!-- Auto Reminders Button -->
                <Button
                    android:id="@+id/btn_test_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ START AUTO REMINDERS"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/accent"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Progress"
                    android:textSize="16sp"
                    android:textColor="@color/secondary"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progress="45"
                    android:progressTint="@color/accent"
                    android:progressBackgroundTint="@color/gray_200" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/text_progress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="900ml / 2000ml"
                        android:textSize="14sp"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/text_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45%"
                        android:textSize="14sp"
                        android:textColor="@color/accent"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_motivation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª Keep going! You're doing great!"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btn_reset_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Today's Progress"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/gray_200"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
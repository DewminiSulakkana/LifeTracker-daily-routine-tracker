<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/category_learning_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Emoji -->
        <TextView
            android:id="@+id/text_mood_emoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="ðŸ˜Š"
            android:textSize="24sp"
            android:background="@color/primary_surface"
            android:backgroundTint="@color/primary_surface"
            app:backgroundTint="@color/primary_surface" />

        <!-- Mood Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/text_mood_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feeling great today!"
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_mood"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/error" />

    </LinearLayout>

</androidx.cardview.widget.CardView>